<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/RV_image"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/RV_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Id"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_bodytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Bodytype"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Color"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Age"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_sheltername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Shelter_name"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_datefound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Datefound"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/RV_adressfound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Adressfound"
            android:textSize="25sp">
        </TextView>

    </RelativeLayout>
    
</LinearLayout>